[
    {kernel, [
        {logger, [
            {handler, console, logger_std_h, #{
                level => debug
            }},
            {handler, error_file_handler, logger_disk_log_h, #{
                config => #{
                    file => "logs/error.log",
                    type => wrap,
                    max_no_bytes => 104857600, 
                    max_no_files => 100
                },
                level => error
            }},
            {handler, debug_file_handler, logger_disk_log_h, #{
                config => #{
                    file => "logs/console.log",
                    type => wrap,
                    max_no_bytes => 104857600,
                    max_no_files => 100
                },
                level => debug
            }}
        ]},
        {logger_level, debug}
    ]}
].